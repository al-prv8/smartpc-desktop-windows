<Page
    x:Class="SensePC.Desktop.WinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer>
        <Grid Padding="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Settings" 
                           Style="{StaticResource TitleTextBlockStyle}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Configure app preferences and behavior" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Settings Tabs -->
            <Pivot x:Name="SettingsPivot" Grid.Row="1">
                <!-- General Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE713;" FontSize="16"/>
                            <TextBlock Text="General"/>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <StackPanel Spacing="24" Margin="0,24,0,0" MaxWidth="600" HorizontalAlignment="Left">
                        <!-- General Settings Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="General Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock Text="Manage general account preferences"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Language -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Language" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <ComboBox x:Name="LanguageComboBox" HorizontalAlignment="Stretch" Width="300">
                                        <ComboBoxItem Content="English" IsSelected="True"/>
                                        <ComboBoxItem Content="French"/>
                                        <ComboBoxItem Content="German"/>
                                        <ComboBoxItem Content="Spanish"/>
                                        <ComboBoxItem Content="Japanese"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Time Zone -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Time Zone" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <ComboBox x:Name="TimeZoneComboBox" HorizontalAlignment="Stretch" Width="300">
                                        <ComboBoxItem Content="Pacific Time (UTC-8)"/>
                                        <ComboBoxItem Content="Mountain Time (UTC-7)"/>
                                        <ComboBoxItem Content="Central Time (UTC-6)"/>
                                        <ComboBoxItem Content="Eastern Time (UTC-5)" IsSelected="True"/>
                                        <ComboBoxItem Content="UTC"/>
                                        <ComboBoxItem Content="Central European Time (UTC+1)"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Activity Status -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Activity Status" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Show when you're active"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="ActivityStatusToggle" Grid.Column="1" IsOn="True" OnContent="" OffContent=""/>
                                </Grid>

                                <!-- Sound Effects -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Sound Effects" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Play sounds for notifications and actions"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="SoundEffectsToggle" Grid.Column="1" IsOn="True" OnContent="" OffContent=""/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Session Settings Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Session Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock Text="Manage your session preferences"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Session Timeout -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Session Timeout" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <ComboBox x:Name="SessionTimeoutComboBox" HorizontalAlignment="Stretch" Width="300">
                                        <ComboBoxItem Content="15 minutes"/>
                                        <ComboBoxItem Content="30 minutes" IsSelected="True"/>
                                        <ComboBoxItem Content="1 hour"/>
                                        <ComboBoxItem Content="2 hours"/>
                                        <ComboBoxItem Content="Never"/>
                                    </ComboBox>
                                    <TextBlock Text="Your smart PC will hibernate after this period of inactivity"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Auto Reconnect -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Automatic Reconnect" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Automatically reconnect if connection is lost"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="AutoReconnectToggle" Grid.Column="1" IsOn="True" OnContent="" OffContent=""/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </PivotItem>

                <!-- Appearance Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE790;" FontSize="16"/>
                            <TextBlock Text="Appearance"/>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <StackPanel Spacing="24" Margin="0,24,0,0" MaxWidth="600" HorizontalAlignment="Left">
                        <!-- Appearance Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock Text="Customize the look and feel"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Theme -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Theme" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <RadioButton x:Name="DarkThemeRadio" GroupName="Theme" IsChecked="True">
                                            <StackPanel Spacing="8" Width="100">
                                                <Border Background="#1a1a1a" CornerRadius="6" Height="60" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"/>
                                                <TextBlock Text="Dark" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </RadioButton>
                                        <RadioButton x:Name="LightThemeRadio" GroupName="Theme">
                                            <StackPanel Spacing="8" Width="100">
                                                <Border Background="White" CornerRadius="6" Height="60" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"/>
                                                <TextBlock Text="Light" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </RadioButton>
                                        <RadioButton x:Name="SystemThemeRadio" GroupName="Theme">
                                            <StackPanel Spacing="8" Width="100">
                                                <Border CornerRadius="6" Height="60" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#1a1a1a" Offset="0"/>
                                                            <GradientStop Color="White" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Text="System" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </RadioButton>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Accent Color -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Accent Color" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <RadioButton x:Name="BlueAccentRadio" GroupName="AccentColor" IsChecked="True" Width="40" Height="40" Padding="0">
                                            <RadioButton.Content>
                                                <Ellipse Width="32" Height="32" Fill="#3B82F6"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                        <RadioButton x:Name="PurpleAccentRadio" GroupName="AccentColor" Width="40" Height="40" Padding="0">
                                            <RadioButton.Content>
                                                <Ellipse Width="32" Height="32" Fill="#8B5CF6"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                        <RadioButton x:Name="GreenAccentRadio" GroupName="AccentColor" Width="40" Height="40" Padding="0">
                                            <RadioButton.Content>
                                                <Ellipse Width="32" Height="32" Fill="#22C55E"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                        <RadioButton x:Name="OrangeAccentRadio" GroupName="AccentColor" Width="40" Height="40" Padding="0">
                                            <RadioButton.Content>
                                                <Ellipse Width="32" Height="32" Fill="#F97316"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                        <RadioButton x:Name="PinkAccentRadio" GroupName="AccentColor" Width="40" Height="40" Padding="0">
                                            <RadioButton.Content>
                                                <Ellipse Width="32" Height="32" Fill="#EC4899"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                        <RadioButton x:Name="RedAccentRadio" GroupName="AccentColor" Width="40" Height="40" Padding="0">
                                            <RadioButton.Content>
                                                <Ellipse Width="32" Height="32" Fill="#EF4444"/>
                                            </RadioButton.Content>
                                        </RadioButton>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Reduced Motion -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Reduced Motion" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Reduce the amount of animations"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="ReducedMotionToggle" Grid.Column="1" IsOn="False" OnContent="" OffContent=""/>
                                </Grid>

                                <!-- Reduce Transparency -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Reduce Transparency" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Reduce the transparency of background elements"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="ReduceTransparencyToggle" Grid.Column="1" IsOn="False" OnContent="" OffContent=""/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </PivotItem>

                <!-- Security Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72E;" FontSize="16"/>
                            <TextBlock Text="Security"/>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <StackPanel Spacing="24" Margin="0,24,0,0" MaxWidth="600" HorizontalAlignment="Left">
                        <!-- Security Settings Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Security Settings" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock Text="Manage your security preferences"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Login Verification -->
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Login Verification" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <StackPanel Spacing="8">
                                        <RadioButton x:Name="EmailVerificationRadio" GroupName="LoginVerification" IsChecked="True" Content="Email Verification"/>
                                        <RadioButton x:Name="TwoFactorRadio" GroupName="LoginVerification" Content="Two-Factor Authentication"/>
                                        <RadioButton x:Name="NoVerificationRadio" GroupName="LoginVerification" Content="No Additional Verification"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Login Notifications -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Login Notifications" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Get notified of new logins to your account"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="LoginNotificationsToggle" Grid.Column="1" IsOn="True" OnContent="" OffContent=""/>
                                </Grid>

                                <!-- Remember Trusted Devices -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Remember Trusted Devices" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Skip verification on devices you've previously used"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <ToggleSwitch x:Name="TrustedDevicesToggle" Grid.Column="1" IsOn="True" OnContent="" OffContent=""/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </PivotItem>

                <!-- Advanced Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE90F;" FontSize="16"/>
                            <TextBlock Text="Advanced"/>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <StackPanel Spacing="24" Margin="0,24,0,0" MaxWidth="600" HorizontalAlignment="Left">
                        <!-- Data Management Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="Data Management" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <TextBlock Text="Manage your app data and cache"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Clear Cache -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Clear Cache" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Remove temporary files to free up space"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button x:Name="ClearCacheButton" Grid.Column="1" Click="ClearCacheButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                            <TextBlock Text="Clear"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!-- Export Data -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Export Data" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Download a copy of your data"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button x:Name="ExportDataButton" Grid.Column="1" Click="ExportDataButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                            <TextBlock Text="Export"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!-- Reset to Defaults -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Reset to Defaults" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Restore all settings to their default values"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button x:Name="ResetDefaultsButton" Grid.Column="1" Click="ResetDefaultsButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                            <TextBlock Text="Reset"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Danger Zone Card -->
                        <Border Background="#2d1f1f"
                                BorderBrush="#7f1d1d"
                                BorderThickness="1" CornerRadius="8" Padding="24">
                            <StackPanel Spacing="20">
                                <StackPanel Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE7BA;" FontSize="16" Foreground="#EF4444"/>
                                        <TextBlock Text="Danger Zone" Style="{StaticResource SubtitleTextBlockStyle}" Foreground="#EF4444"/>
                                    </StackPanel>
                                    <TextBlock Text="Irreversible actions that affect your account"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Delete Account -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="Delete Account" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Permanently delete your account and all associated data"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    <Button x:Name="DeleteAccountButton" Grid.Column="1" Click="DeleteAccountButton_Click"
                                            Background="#7f1d1d" Foreground="White">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                            <TextBlock Text="Delete"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </PivotItem>
            </Pivot>
        </Grid>
    </ScrollViewer>
</Page>
