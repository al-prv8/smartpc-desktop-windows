<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SensePC.Desktop.WinUI.Views.SupportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Support Center" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Get help, submit tickets, and browse FAQs" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Pivot Tabs -->
        <Pivot Grid.Row="1" x:Name="SupportPivot">
            
            <!-- My Tickets Tab -->
            <PivotItem Header="My Tickets">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Spacing="4" Margin="0,0,0,16">
                        <TextBlock Text="Sense Support" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                        <TextBlock Text="Our support team will respond as soon as possible." 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,16">
                        <AutoSuggestBox x:Name="TicketSearchBox" 
                                        PlaceholderText="Search tickets..." 
                                        QueryIcon="Find" Width="250"
                                        TextChanged="TicketSearch_TextChanged"/>
                        
                        <ComboBox x:Name="TicketStatusFilter" Width="150"
                                  SelectionChanged="TicketStatusFilter_Changed">
                            <ComboBoxItem Content="Any" IsSelected="True"/>
                            <ComboBoxItem Content="Open"/>
                            <ComboBoxItem Content="In Progress"/>
                            <ComboBoxItem Content="Resolved"/>
                            <ComboBoxItem Content="Closed"/>
                        </ComboBox>
                        
                        <Button x:Name="SortButton" Click="SortButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon x:Name="SortIcon" Glyph="&#xE74A;" FontSize="14"/>
                                <TextBlock Text="Date"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Click="RefreshButton_Click">
                            <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                        </Button>
                    </StackPanel>
                    
                    <Border Grid.Row="2" 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8">
                        <Grid>
                            <ListView x:Name="TicketsListView" 
                                      SelectionMode="None"
                                      IsItemClickEnabled="True"
                                      ItemClick="Ticket_Click">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="16,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Subject}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding TicketId}" FontSize="12" Opacity="0.6"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Status}" FontSize="12"/>
                                                <TextBlock Text="{Binding CreatedAtDisplay}" FontSize="11" Opacity="0.6"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            
                            <StackPanel x:Name="NoTicketsPanel" Visibility="Visible"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Spacing="12" Padding="48">
                                <FontIcon Glyph="&#xE8A1;" FontSize="48"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="No tickets found" 
                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Create a new ticket to get started"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <ProgressRing x:Name="TicketsLoadingRing" IsActive="False"/>
                        </Grid>
                    </Border>
                </Grid>
            </PivotItem>
            
            <!-- New Ticket Tab -->
            <PivotItem Header="New Ticket">
                <ScrollViewer Margin="0,12,0,0">
                    <StackPanel Spacing="8" HorizontalAlignment="Stretch">
                        
                        <!-- Header -->
                        <TextBlock Text="Create new support ticket" 
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Margin="0,0,0,4"/>
                        
                        <!-- Subject Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Subject" FontWeight="SemiBold"/>
                                <TextBox x:Name="SubjectBox" 
                                         PlaceholderText="Brief description of your issue"
                                         MaxLength="100"/>
                                <TextBlock x:Name="SubjectError" Foreground="{ThemeResource SystemFillColorCriticalBrush}" 
                                           FontSize="12" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Category & Priority Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Category" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="CategoryCombo" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="Technical" IsSelected="True"/>
                                        <ComboBoxItem Content="Billing"/>
                                        <ComboBoxItem Content="Account"/>
                                    </ComboBox>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" Spacing="8">
                                    <TextBlock Text="Priority" FontWeight="SemiBold"/>
                                    <ComboBox x:Name="PriorityCombo" HorizontalAlignment="Stretch">
                                        <ComboBoxItem Content="Low"/>
                                        <ComboBoxItem Content="Medium" IsSelected="True"/>
                                        <ComboBoxItem Content="High"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Description Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Description" FontWeight="SemiBold"/>
                                <TextBox x:Name="DescriptionBox" 
                                         PlaceholderText="Describe your issue in detail..."
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         MinHeight="120" MaxLength="2000"/>
                                <TextBlock x:Name="DescriptionError" Foreground="{ThemeResource SystemFillColorCriticalBrush}" 
                                           FontSize="12" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Attachments Card -->
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A7;" FontSize="16"/>
                                    <TextBlock Text="Attachments" FontWeight="SemiBold"/>
                                    <TextBlock Text="(optional)" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <Button x:Name="AddAttachmentButton" Click="AttachmentButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE710;" FontSize="14"/>
                                        <TextBlock Text="Add files"/>
                                    </StackPanel>
                                </Button>
                                
                                <TextBlock Text="PNG or JPEG, max 2 files" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                
                                <!-- Attached Files -->
                                <ItemsControl x:Name="AttachmentsListControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{ThemeResource ControlFillColorSecondaryBrush}"
                                                    CornerRadius="4" Padding="12,8" Margin="0,4,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <FontIcon Glyph="&#xE7C3;" FontSize="14" Margin="0,0,8,0"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center"/>
                                                    <Button Grid.Column="2" 
                                                            Background="Transparent" 
                                                            Padding="4"
                                                            Click="RemoveAttachment_Click" 
                                                            Tag="{Binding}"
                                                            ToolTipService.ToolTip="Remove">
                                                        <FontIcon Glyph="&#xE711;" FontSize="12" 
                                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        
                        <!-- Submit Button -->
                        <Button x:Name="SubmitTicketButton" 
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Left"
                                Click="SubmitTicket_Click"
                                Margin="0,8,0,32">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE724;" FontSize="14"/>
                                <TextBlock Text="Submit Ticket"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            
            <!-- FAQ Tab -->
            <PivotItem Header="FAQ">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Frequently Asked Questions" 
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Find your expected answer here."
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Content="Expand All" Click="ExpandAll_Click"/>
                            <Button Content="Collapse All" Click="CollapseAll_Click"/>
                        </StackPanel>
                    </Grid>
                    
                    <AutoSuggestBox Grid.Row="1" x:Name="FAQSearchBox" 
                                    PlaceholderText="Search FAQs..."
                                    QueryIcon="Find" Width="300" 
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,16"
                                    TextChanged="FAQSearch_TextChanged"/>
                    
                    <ScrollViewer Grid.Row="2">
                        <ItemsControl x:Name="FAQCategoriesControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander HorizontalAlignment="Stretch" 
                                              Margin="0,0,0,12"
                                              IsExpanded="False">
                                        <Expander.Header>
                                            <TextBlock Text="{Binding Title}" 
                                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                                       FontWeight="SemiBold"/>
                                        </Expander.Header>
                                        
                                        <ItemsControl ItemsSource="{Binding Items}" Margin="0,8,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="{ThemeResource ControlFillColorSecondaryBrush}"
                                                            CornerRadius="8" Padding="16" Margin="0,0,0,8">
                                                        <StackPanel Spacing="8">
                                                            <TextBlock Text="{Binding Question}" 
                                                                       FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding Answer}" 
                                                                       TextWrapping="Wrap"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </PivotItem>
        </Pivot>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Visibility="Collapsed" Grid.RowSpan="2">
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" Opacity="0.9"/>
            <ProgressRing IsActive="True" Width="40" Height="40"/>
        </Grid>
    </Grid>
</Page>
