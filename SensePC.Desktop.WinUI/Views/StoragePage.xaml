<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SensePC.Desktop.WinUI.Views.StoragePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Sense Cloud" 
                           Style="{StaticResource TitleTextBlockStyle}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Manage your files and cloud storage" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="UploadButton" 
                        Style="{StaticResource AccentButtonStyle}"
                        Click="Upload_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE898;" FontSize="14"/>
                        <TextBlock Text="Upload"/>
                    </StackPanel>
                </Button>
                <Button x:Name="NewFolderButton" Click="NewFolder_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8F4;" FontSize="14"/>
                        <TextBlock Text="New Folder"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RefreshButton" Click="Refresh_Click" ToolTipService.ToolTip="Refresh">
                    <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <ScrollViewer Grid.Column="0" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,16,0">
                <StackPanel Spacing="16">
                    <!-- Storage Usage Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="20">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Storage" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <Border Grid.Column="1" 
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="16" Padding="8,4">
                                    <FontIcon Glyph="&#xEDA2;" FontSize="12" Foreground="White"/>
                                </Border>
                            </Grid>
                            
                            <TextBlock x:Name="StorageUsageText" 
                                       Text="Loading..." 
                                       FontSize="28" FontWeight="Bold"/>
                            
                            <ProgressBar x:Name="StorageProgressBar" 
                                         Value="0" Maximum="100"
                                         Height="6" CornerRadius="3"/>
                            
                            <Button Click="StoragePlans_Click" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A1;" FontSize="14"/>
                                    <TextBlock Text="Upgrade Storage"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Categories Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Categories" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <StackPanel x:Name="CategoriesPanel" Spacing="4"/>
                        </StackPanel>
                    </Border>

                    <!-- Duplicate Cleanup Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="28" Height="28" CornerRadius="6">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2530F0" Offset="0"/>
                                            <GradientStop Color="#A801BA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <FontIcon Glyph="&#xE8C8;" FontSize="14" Foreground="White"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel>
                                    <TextBlock Text="Duplicate Cleanup" FontWeight="SemiBold"/>
                                    <TextBlock Text="Find and remove duplicate files" FontSize="11"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            <Button x:Name="DuplicateCleanupBtn" Click="DuplicateCleanup_Click" 
                                    HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE9D9;" FontSize="14"/>
                                    <TextBlock Text="Scan for Duplicates"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Recent Activity Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Recent Activity" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <Button Grid.Column="1" Padding="4" 
                                        Click="RefreshActivity_Click"
                                        ToolTipService.ToolTip="Refresh activity"
                                        Background="Transparent" BorderThickness="0">
                                    <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                                </Button>
                            </Grid>
                            
                            <!-- Activity Loading -->
                            <StackPanel x:Name="ActivityLoadingPanel" Visibility="Collapsed" Spacing="8">
                                <ProgressRing Width="20" Height="20" IsActive="True"/>
                                <TextBlock Text="Loading activity..." FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Activity List -->
                            <StackPanel x:Name="ActivityListPanel" Spacing="8">
                                <!-- Activity items will be populated here -->
                            </StackPanel>
                            
                            <!-- Empty State -->
                            <TextBlock x:Name="ActivityEmptyText" 
                                       Text="No recent activity"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    <!-- Connected Storage Card -->
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1" CornerRadius="8" Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Connected Storage" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            
                            <!-- Dropbox -->
                            <Button HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Click="ConnectDropbox_Click"
                                    Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="&#xE753;" FontSize="16" 
                                              Foreground="#0061FF" 
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="Dropbox" FontSize="13"/>
                                        <TextBlock Text="Coming soon" FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                    <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="12"
                                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </Grid>
                            </Button>
                            
                            <!-- Google Drive -->
                            <Button HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Click="ConnectGoogleDrive_Click"
                                    Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="&#xE753;" FontSize="16" 
                                              Foreground="#4285F4" 
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="Google Drive" FontSize="13"/>
                                        <TextBlock Text="Coming soon" FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                    <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="12"
                                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </Grid>
                            </Button>
                            
                            <!-- iCloud -->
                            <Button HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Left"
                                    Click="ConnectiCloud_Click"
                                    Padding="12,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <FontIcon Glyph="&#xE753;" FontSize="16" 
                                              Foreground="#5AC8FA" 
                                              VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="iCloud Drive" FontSize="13"/>
                                        <TextBlock Text="Coming soon" FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                    <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="12"
                                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Content - File Browser -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <Grid Grid.Row="0" Padding="20,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Breadcrumb / Current Folder -->
                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                            <Button x:Name="BackButton" 
                                    Click="Back_Click"
                                    Visibility="Collapsed"
                                    Padding="8"
                                    ToolTipService.ToolTip="Go back">
                                <FontIcon Glyph="&#xE72B;" FontSize="14"/>
                            </Button>
                            <TextBlock x:Name="CurrentFolderText" 
                                       Text="All Files" 
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Search and Controls -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <AutoSuggestBox x:Name="SearchBox"
                                            PlaceholderText="Search files..."
                                            QueryIcon="Find"
                                            Width="200"
                                            TextChanged="SearchBox_TextChanged"/>
                            <ComboBox x:Name="SortComboBox"
                                      SelectionChanged="Sort_Changed"
                                      Width="100">
                                <ComboBoxItem Content="Date" Tag="date" IsSelected="True"/>
                                <ComboBoxItem Content="Name" Tag="name"/>
                                <ComboBoxItem Content="Size" Tag="size"/>
                            </ComboBox>
                            <ToggleButton x:Name="ViewToggleButton"
                                          Click="ViewToggle_Click"
                                          Padding="10"
                                          ToolTipService.ToolTip="Toggle Grid/List view">
                                <FontIcon x:Name="ViewToggleIcon" Glyph="&#xF0E2;" FontSize="14"/>
                            </ToggleButton>
                            <Button x:Name="BulkDownloadButton"
                                    Visibility="Collapsed"
                                    Click="BulkDownload_Click"
                                    ToolTipService.ToolTip="Download selected files">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                    <TextBlock x:Name="BulkDownloadText" Text="Download"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BulkShareButton"
                                    Visibility="Collapsed"
                                    Click="BulkShare_Click"
                                    ToolTipService.ToolTip="Share selected files">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE72D;" FontSize="14"/>
                                    <TextBlock x:Name="BulkShareText" Text="Share"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BulkDeleteButton"
                                    Visibility="Collapsed"
                                    Click="BulkDelete_Click"
                                    ToolTipService.ToolTip="Delete selected files">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                    <TextBlock x:Name="BulkDeleteText" Text="Delete"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Column Headers -->
                    <Grid Grid.Row="1" Padding="20,8" 
                          Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1" Text="Name" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="Modified" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="Size" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"/>
                    </Grid>

                    <!-- Content Area with Drag-Drop Support -->
                    <Grid Grid.Row="2" MinHeight="300"
                          AllowDrop="True"
                          DragOver="ContentArea_DragOver"
                          DragLeave="ContentArea_DragLeave"
                          Drop="ContentArea_Drop"
                          x:Name="ContentAreaGrid">
                        <!-- Loading State -->
                        <StackPanel x:Name="LoadingState" 
                                    Visibility="Collapsed" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Spacing="16">
                            <ProgressRing IsActive="True" Width="48" Height="48"/>
                            <TextBlock Text="Loading files..." 
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyState" 
                                    Visibility="Collapsed" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Spacing="16"
                                    Padding="40">
                            <FontIcon Glyph="&#xE8B7;" FontSize="48" 
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Text="No Files Found" 
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Upload your first file to get started with Sense Cloud." 
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="300"/>
                            <Button Click="Upload_Click" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    Padding="24,12" 
                                    HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE898;" FontSize="14"/>
                                    <TextBlock Text="Upload Files"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Files List View -->
                        <ListView x:Name="FilesListView"
                                  Visibility="Collapsed"
                                  SelectionMode="Extended"
                                  IsItemClickEnabled="True"
                                  ItemClick="FileItem_Click"
                                  SelectionChanged="FilesListView_SelectionChanged"
                                  Padding="8,0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12,10" ColumnSpacing="8"
                                          PointerEntered="FileRow_PointerEntered"
                                          PointerExited="FileRow_PointerExited">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- File Icon -->
                                        <FontIcon Grid.Column="0" 
                                                  Glyph="{Binding FileTypeIcon}" 
                                                  FontSize="18"
                                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        
                                        <!-- File Name with Star -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                            <TextBlock Text="{Binding FileName}" 
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <FontIcon Glyph="&#xE735;" 
                                                      FontSize="12" 
                                                      Foreground="#F59E0B"
                                                      Visibility="{Binding Starred, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            <FontIcon Glyph="&#xE72D;" 
                                                      FontSize="12" 
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                      Visibility="{Binding Shared, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                        
                                        <!-- Modified Date -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding DisplayDate}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                        
                                        <!-- Size -->
                                        <TextBlock Grid.Column="3" 
                                                   Text="{Binding DisplaySize}" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   VerticalAlignment="Center"/>
                                        
                                        <!-- Actions Menu -->
                                        <Button Grid.Column="4" 
                                                Padding="8"
                                                Click="FileMenu_Click"
                                                Tag="{Binding}"
                                                ToolTipService.ToolTip="More options">
                                            <FontIcon Glyph="&#xE712;" FontSize="14"/>
                                            <Button.Flyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Preview" Click="Preview_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE890;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem Text="Download" Icon="Download" Click="Download_Click" Tag="{Binding}"/>
                                                    <MenuFlyoutItem Text="Rename" Click="Rename_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8AC;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem Text="Copy Name" Click="CopyName_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8C8;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem Text="Star" Click="Star_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE734;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem Text="Share" Click="Share_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE72D;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem Text="Stop Sharing" Click="StopSharing_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE711;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutSeparator/>
                                                    <MenuFlyoutItem Text="Copy to..." Click="Copy_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8C8;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem Text="Move to..." Click="Move_Click" Tag="{Binding}">
                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8DE;"/>
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutSeparator/>
                                                    <MenuFlyoutItem Text="Delete" Icon="Delete" Click="Delete_Click" Tag="{Binding}"/>
                                                </MenuFlyout>
                                            </Button.Flyout>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Grid View Mode -->
                        <GridView x:Name="FilesGridView"
                                  Visibility="Collapsed"
                                  SelectionMode="Extended"
                                  IsItemClickEnabled="True"
                                  ItemClick="FileItem_Click"
                                  SelectionChanged="FilesGridView_SelectionChanged"
                                  Padding="12">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" 
                                                   ItemWidth="180" 
                                                   ItemHeight="180"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12"
                                            Width="160"
                                            Height="160"
                                            PointerEntered="FileRow_PointerEntered"
                                            PointerExited="FileRow_PointerExited">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Large File Icon -->
                                            <FontIcon Grid.Row="0" 
                                                      Glyph="{Binding FileTypeIcon}" 
                                                      FontSize="48"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                            
                                            <!-- Star indicator overlay -->
                                            <FontIcon Grid.Row="0" 
                                                      Glyph="&#xE735;" 
                                                      FontSize="14"
                                                      Foreground="#FFD700"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Top"
                                                      Visibility="{Binding Starred, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                            
                                            <!-- File Name -->
                                            <TextBlock Grid.Row="1" 
                                                       Text="{Binding FileName}" 
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="2"
                                                       TextWrapping="Wrap"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"
                                                       Margin="0,8,0,4"/>
                                            
                                            <!-- File Size -->
                                            <TextBlock Grid.Row="2" 
                                                       Text="{Binding FileSizeFormatted}" 
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       HorizontalAlignment="Center"/>
                                            
                                            <!-- Context Menu Button -->
                                            <Button Grid.Row="0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Top"
                                                    Padding="4"
                                                    Margin="-4,-4,0,0"
                                                    Tag="{Binding}"
                                                    ToolTipService.ToolTip="More options">
                                                <FontIcon Glyph="&#xE712;" FontSize="12"/>
                                                <Button.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem Text="Preview" Click="Preview_Click" Tag="{Binding}">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE890;"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Download" Icon="Download" Click="Download_Click" Tag="{Binding}"/>
                                                        <MenuFlyoutItem Text="Rename" Click="Rename_Click" Tag="{Binding}">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE8AC;"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Copy Name" Click="CopyName_Click" Tag="{Binding}">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE8C8;"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Share" Click="Share_Click" Tag="{Binding}">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE72D;"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutItem Text="Stop Sharing" Click="StopSharing_Click" Tag="{Binding}">
                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE711;"/>
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                        <MenuFlyoutSeparator/>
                                                        <MenuFlyoutItem Text="Delete" Icon="Delete" Click="Delete_Click" Tag="{Binding}"/>
                                                    </MenuFlyout>
                                                </Button.Flyout>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>

                    <!-- Pagination -->
                    <StackPanel Grid.Row="3" 
                                x:Name="PaginationPanel"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Spacing="8"
                                Padding="16"
                                Visibility="Collapsed">
                        <Button x:Name="PrevPageButton" 
                                Click="PrevPage_Click" 
                                Padding="12,8"
                                ToolTipService.ToolTip="Previous page">
                            <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                        </Button>
                        <TextBlock x:Name="PageInfoText" 
                                   Text="Page 1 of 1" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Margin="16,0"/>
                        <Button x:Name="NextPageButton" 
                                Click="NextPage_Click" 
                                Padding="12,8"
                                ToolTipService.ToolTip="Next page">
                            <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
