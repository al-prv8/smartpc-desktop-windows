<Page
    x:Class="SensePC.Desktop.WinUI.Views.NotificationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Notifications" 
                           Style="{StaticResource TitleTextBlockStyle}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Stay updated on your cloud computer activity" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="MarkAllReadButton"
                        Click="MarkAllReadButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE73E;" FontSize="14"/>
                        <TextBlock Text="Mark all read"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RefreshButton"
                        Click="RefreshButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Card -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
            
            <Pivot x:Name="NotificationsPivot">
                <!-- All Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE715;" FontSize="16"/>
                            <TextBlock Text="All"/>
                            <Border x:Name="AllCountBadge"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                    CornerRadius="8"
                                    Padding="5,1"
                                    MinWidth="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="AllCountText" Text="0" FontSize="10" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <ScrollViewer Padding="16">
                        <StackPanel x:Name="AllNotificationsPanel" Spacing="12"/>
                    </ScrollViewer>
                </PivotItem>

                <!-- Unread Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8BD;" FontSize="16"/>
                            <TextBlock Text="Unread"/>
                            <Border x:Name="UnreadCountBadge"
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"
                                    CornerRadius="8"
                                    Padding="5,1"
                                    MinWidth="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="UnreadCountText" Text="0" FontSize="10" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <ScrollViewer Padding="16">
                        <StackPanel x:Name="UnreadNotificationsPanel" Spacing="12"/>
                    </ScrollViewer>
                </PivotItem>

                <!-- Alerts Tab -->
                <PivotItem>
                    <PivotItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE7BA;" FontSize="16"/>
                            <TextBlock Text="Alerts"/>
                            <Border x:Name="AlertsCountBadge"
                                    Background="{ThemeResource SystemFillColorCautionBrush}"
                                    CornerRadius="8"
                                    Padding="5,1"
                                    MinWidth="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="AlertsCountText" Text="0" FontSize="10" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </PivotItem.Header>
                    
                    <ScrollViewer Padding="16">
                        <StackPanel x:Name="AlertsNotificationsPanel" Spacing="12"/>
                    </ScrollViewer>
                </PivotItem>
            </Pivot>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.RowSpan="2"
              Background="Transparent"
              Visibility="Collapsed">
            <ProgressRing IsActive="True" Width="40" Height="40"/>
        </Grid>

        <!-- Empty State -->
        <StackPanel x:Name="EmptyState"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <FontIcon Glyph="&#xE7E7;" FontSize="48" 
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="No notifications" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,4"/>
            <TextBlock Text="You're all caught up!" 
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
