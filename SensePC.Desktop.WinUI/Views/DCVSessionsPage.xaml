<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SensePC.Desktop.WinUI.Views.DCVSessionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SensePC.Desktop.WinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tab View for multiple sessions - WinUI 3 Modern Style -->
        <TabView x:Name="SessionTabView"
                 Grid.Row="0"
                 Grid.RowSpan="2"
                 IsAddTabButtonVisible="False"
                 TabCloseRequested="SessionTabView_TabCloseRequested"
                 SelectionChanged="SessionTabView_SelectionChanged"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch"
                 Margin="0"
                 Padding="0"
                 TabWidthMode="SizeToContent"
                 CloseButtonOverlayMode="OnPointerOver">

            <TabView.Resources>
                <!-- Custom TabView styling for modern WinUI 3 look -->
                <Thickness x:Key="TabViewHeaderPadding">0,0,0,0</Thickness>
                <Thickness x:Key="TabViewItemHeaderPadding">12,8,12,8</Thickness>
            </TabView.Resources>
            
            <TabView.TabStripHeader>
                <StackPanel Orientation="Horizontal" Padding="12,8,8,8" Background="Transparent">
                    <Button x:Name="BackButton" 
                            Click="BackButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            ToolTipService.ToolTip="Back to PC List"
                            Padding="12,6"
                            CornerRadius="4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE72B;" FontSize="12"/>
                            <TextBlock Text="Back" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabView.TabStripHeader>
            
            <TabView.TabStripFooter>
                <StackPanel Orientation="Horizontal" Padding="8,0,12,0" VerticalAlignment="Center">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="12"
                            Padding="10,4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE774;" FontSize="12" 
                                      Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock x:Name="ConnectionStatusText" 
                                       Text="No sessions"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabView.TabStripFooter>
        </TabView>

        <!-- Empty state when no tabs -->
        <StackPanel x:Name="EmptyStatePanel"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Visible"
                    Spacing="8">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="16"
                    Padding="48,40"
                    HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="32"
                            Width="64" Height="64"
                            HorizontalAlignment="Center"
                            Opacity="0.15"/>
                    <FontIcon Glyph="&#xE7F4;" FontSize="48" 
                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,-56,0,0"/>
                    <TextBlock Text="No PC Sessions Open"
                               FontSize="20"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,24,0,0"/>
                    <TextBlock Text="Click 'Connect' on a PC to start a remote session"
                               FontSize="13"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                    <Button Content="Go to PC List"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="BackButton_Click"
                            Margin="0,16,0,0"
                            Padding="20,10"
                            CornerRadius="6"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
