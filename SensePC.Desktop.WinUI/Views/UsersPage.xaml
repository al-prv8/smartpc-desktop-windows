<Page
    x:Class="SensePC.Desktop.WinUI.Views.UsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="User Management" 
                           Style="{StaticResource TitleTextBlockStyle}"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Manage team members and their access permissions" 
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <Button x:Name="InviteUserButton"
                    Grid.Column="1"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="InviteUserButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8FA;" FontSize="14"/>
                    <TextBlock Text="Invite User"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Main Content Card -->
        <Border Grid.Row="1" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="16">
                    <AutoSuggestBox x:Name="SearchBox"
                                    PlaceholderText="Search users..."
                                    QueryIcon="Find"
                                    Width="300"
                                    TextChanged="SearchBox_TextChanged"/>
                </StackPanel>

                <!-- Column Headers -->
                <Grid Grid.Row="1" Padding="16,8" 
                      Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Name" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Email" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Role" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Status" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="4" Text="Assigned PCs" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="5" Text="Actions" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- Users List -->
                <ListView x:Name="UsersListView" 
                          Grid.Row="2"
                          SelectionMode="None"
                          Padding="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="16,12"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <!-- Loading -->
                <ProgressRing x:Name="LoadingRing" 
                              Grid.Row="2"
                              IsActive="False"
                              Width="40" Height="40"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            Grid.Row="2"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="12">
                    <FontIcon Glyph="&#xE716;" FontSize="48" 
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="No users found" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Invite team members to get started" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="3" 
                        Padding="16,12"
                        BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                        BorderThickness="0,1,0,0">
                    <TextBlock x:Name="TotalUsersText" 
                               Text="Total users: 0"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
