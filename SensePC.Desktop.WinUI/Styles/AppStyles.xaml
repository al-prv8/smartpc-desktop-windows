<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==================== COLORS ==================== -->
    
    <!-- Brand Colors -->
    <Color x:Key="BrandPrimaryColor">#5F6FFF</Color>
    <Color x:Key="BrandSecondaryColor">#A801BA</Color>
    
    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="StatusRunningBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="StatusStoppedBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="StatusPendingBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#EF4444"/>
    
    <SolidColorBrush x:Key="StatusRunningBackgroundBrush" Color="#1A10B981"/>
    <SolidColorBrush x:Key="StatusStoppedBackgroundBrush" Color="#1A6B7280"/>
    <SolidColorBrush x:Key="StatusPendingBackgroundBrush" Color="#1AF59E0B"/>
    <SolidColorBrush x:Key="StatusErrorBackgroundBrush" Color="#1AEF4444"/>

    <!-- ==================== TEXT STYLES ==================== -->
    
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <Style x:Key="BodySecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <!-- ==================== BUTTON STYLES ==================== -->
    
    <!-- Danger Button -->
    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#DC2626"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <!-- Outline Button -->
    <Style x:Key="OutlineButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <!-- Icon Button -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="MinWidth" Value="36"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <!-- Action Button with Icon and Text -->
    <Style x:Key="ActionButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- ==================== CARD STYLES ==================== -->
    
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>
    
    <Style x:Key="ElevatedCardStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
    </Style>
    
    <!-- PC Card Style -->
    <Style x:Key="PCCardStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- ==================== STATUS BADGE STYLES ==================== -->
    
    <Style x:Key="StatusBadgeBaseStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="RunningBadgeStyle" TargetType="Border" BasedOn="{StaticResource StatusBadgeBaseStyle}">
        <Setter Property="Background" Value="{StaticResource StatusRunningBackgroundBrush}"/>
    </Style>
    
    <Style x:Key="StoppedBadgeStyle" TargetType="Border" BasedOn="{StaticResource StatusBadgeBaseStyle}">
        <Setter Property="Background" Value="{StaticResource StatusStoppedBackgroundBrush}"/>
    </Style>
    
    <Style x:Key="PendingBadgeStyle" TargetType="Border" BasedOn="{StaticResource StatusBadgeBaseStyle}">
        <Setter Property="Background" Value="{StaticResource StatusPendingBackgroundBrush}"/>
    </Style>

    <!-- ==================== INPUT STYLES ==================== -->
    
    <Style x:Key="SearchBoxStyle" TargetType="AutoSuggestBox">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="PlaceholderText" Value="Search..."/>
    </Style>

    <!-- ==================== PROGRESS STYLES ==================== -->
    
    <Style x:Key="MetricProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
    </Style>

</ResourceDictionary>
